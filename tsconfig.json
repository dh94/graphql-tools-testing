{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"moduleResolution": "node",
		"sourceMap": true,
		"noUnusedLocals": true,
		"noUnusedParameters": false,
		"experimentalDecorators": true,
		"outDir": "dist",
		"baseUrl": ".",
		"lib": [
			"es2017", "esnext.asynciterable", "dom"
		],
        "paths": {
            "*": [
                "node_modules/*",
            ]
        }
	},
    "include": [
		"src/*",
		"src/**/*",
	],
	"exclude": [
        "node_modules/**",
        "test/**"
    ]
}