{
  "name": "lottory-server",
  "version": "0.0.1",
  "description": "",
  "main": "src/index.ts",
  "scripts": {
    "postinstall": "npm run build",
    "start": "cross-env NODE_ENV=development npm run serve",
    "serve": "./node_modules/.bin/nodemon --exec \"npm run build && node\" ./dist/index.js -e ts,gql,graphql",
    "build": "npm run build-ts && npm run tslint && npm run copy-static-assets",
    "build-ts": "tsc || exit 1",
    "clean": "shx rm -r dist",
    "tslint": "tslint -c tslint.json -p tsconfig.json --format stylish || exit 1",
    "copy-static-assets": "node copyStaticAssets.js",
    "test": "cross-env TS_NODE_PROJECT=test/tsconfig.json NODE_ENV=test mocha test/**/*.test.ts"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "apollo-server-express": "^1.3.2",
    "body-parser": "^1.17.2",
    "cors": "^2.8.4",
    "express": "^4.16.2",
    "graphql": "^0.13.1",
    "graphql-date": "^1.0.3",
    "graphql-playground-middleware-express": "^1.5.7",
    "graphql-tools": "^2.23.1",
    "helmet": "^3.8.1",
    "http-status-codes": "^1.3.0",
    "lodash": "^4.17.4",
    "moment": "^2.20.1",
    "typescript": "^2.7.2"
  },
  "devDependencies": {
    "@types/chai": "^4.0.4",
    "@types/express": "^4.0.37",
    "@types/graphql": "^0.12.4",
    "@types/lodash": "^4.14.78",
    "@types/mocha": "^2.2.42",
    "@types/node": "^9.4.6",
    "@types/supertest": "^2.0.3",
    "chai": "^4.1.1",
    "cpx": "^1.5.0",
    "cross-env": "^5.0.5",
    "mocha": "^3.5.0",
    "nodemon": "^1.11.0",
    "shx": "^0.2.2",
    "supertest": "^3.0.0",
    "ts-node": "^3.3.0",
    "tslint": "^5.7.0"
  }
}
